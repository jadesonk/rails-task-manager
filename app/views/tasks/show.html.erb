<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @task.title %></h1>

      <div class="task-detail__container">
         <%= @task.details %>
      </div>

      <%= check_box_tag 'completed', 'completed', checked=@task.completed %> this tasks is
      <%= @task.completed ? 'completed' : 'not completed' %>

      <div>
        <%= link_to 'Back to list', tasks_path %>
      </div>
    </div>
  </div>
</div>
